{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX_OLD": "${sourceDir}/out/install/${presetName}",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/../../ux_proto/server/wingman/${hostSystemName}/${presetName}",
                "BUILD_SHARED_LIBS": true,
                "LLAMA_BUILD_TESTS": false,
                "LLAMA_BUILD_EXAMPLES": false,
                "LLAMA_BUILD_SERVER": false,
                "WINGMAN_BUILD": true,
                "WINGMAN_BUILD_TOOLS": false,
                "WINGMAN_BUILD_STANDALONE": false
            },
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
        },
        {
            "name": "cuBLAS",
            "inherits": [
                "base"
            ],
            "displayName": "CUDA",
            "description": "Provides BLAS acceleration using the CUDA cores on an Nvidia GPU. Make sure to have the CUDA toolkit installed",
            "cacheVariables": {
                "LLAMA_CUBLAS": true
            }
        },
        {
            "name": "Native",
            "inherits": [
                "base"
            ],
            "displayName": "Native Platform",
            "description": "Provides native acceleration for CPU or Apple GPU."
        }
    ]
}
