{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/out/build/${presetName}",
        "cacheVariables": {
            "CMAKE_INSTALL_PREFIX_OLD": "${sourceDir}/out/install/${presetName}",
            "CMAKE_INSTALL_PREFIX_TEMP": "${sourceDir}/../../ux_proto/server/wingman/${hostSystemName}/${presetName}",
            "BUILD_SHARED_LIBS": true,
            "LLAMA_BUILD_TESTS": false,
            "LLAMA_BUILD_EXAMPLES": true,
            "LLAMA_BUILD_SERVER": true,
            "WINGMAN_BUILD": true,
            "WINGMAN_BUILD_TOOLS": false,
            "WINGMAN_BUILD_STANDALONE": false
        },
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
    },
    {
      "name": "cuBLAS",
      "inherits": [
        "base"
      ],
      "displayName": "CUDA",
      "description": "Provides BLAS acceleration using the CUDA cores on an Nvidia GPU. Make sure to have the CUDA toolkit installed",
      "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Debug",
          "LLAMA_CUBLAS": true
      }
    },
    {
      "name": "Native",
      "inherits": [
        "base"
      ],
      "displayName": "Native Platform",
      "description": "Provides native acceleration for CPU or Apple GPU.",
      "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Debug",
          "CMAKE_FIND_ROOT_PATH": "$env{VCPKG_ROOT}/installed/$env{VCPKG_DEFAULT_TRIPLET}"
      },
      "generator": "Ninja"
    }
  ]
}
